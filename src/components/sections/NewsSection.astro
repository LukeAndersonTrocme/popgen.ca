---
import Reveal from '../Reveal.jsx';
import enData from '../../content/en/index.json';
import frData from '../../content/fr/index.json';
const { locale = 'en' } = Astro.props;
const data = locale === 'fr' ? frData : enData;
const { news } = data;
---
<Reveal client:load>
  <section
    id="news"
    class="scroll-mt-24 py-20 bg-[#F7F9FC] dark:bg-slate-800 text-center"
  >
    <h2 class="text-4xl font-bold">
      {locale === 'fr' ? 'Nouvelles' : 'News & Updates'}
    </h2>
    <ul class="mt-6 list-disc list-inside max-w-xl mx-auto space-y-4 text-left">
      {news.map((n) => (
        <li>
          <strong>{n.headline}</strong> ({n.date}) {n.desc}
        </li>
      ))}
    </ul>
  </section>
</Reveal>
