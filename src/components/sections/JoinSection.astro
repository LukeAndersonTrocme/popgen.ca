---
import Reveal from '../Reveal.jsx';
import enData from '../../content/en/index.json';
import frData from '../../content/fr/index.json';
const { locale = 'en' } = Astro.props;
const data = locale === 'fr' ? frData : enData;
const { links } = data;
---
<Reveal client:load>
  <section
    id="join"
    class="scroll-mt-24 py-20 bg-white dark:bg-slate-900 text-center"
  >
    <h2 class="text-4xl font-bold">
      {locale === 'fr' ? 'Rejoindre' : 'How to Join'}
    </h2>
    <ul class="mt-6 list-disc list-inside max-w-xl mx-auto space-y-2 text-left">
      {links.map((l) => (
        <li>
          <a href={l.url} class="text-primary hover:underline">
            {l.label}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Reveal>
