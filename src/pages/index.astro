---
import Page from '../layouts/Page.astro';
import Hero from '../components/Hero.jsx';
import Reveal from '../components/Reveal.jsx';
---
<Page title="PopGen Lab" lang="en" locale="en">
  <Hero locale="en" client:load />

  <Reveal>
    <section class="py-20 bg-[#F7F9FC] text-center">
      <h2 class="text-4xl font-bold">Our Research</h2>
      <p class="mt-4 max-w-2xl mx-auto">
        We develop computational tools and theory to unravel how spatial dynamics shape genetic diversity across populations and ecosystems.
      </p>
      <a href="/research" class="mt-6 inline-block bg-primary text-white px-6 py-3 rounded hover:bg-primary/80">
        Explore our research
      </a>
    </section>
  </Reveal>

  <Reveal>
    <section class="py-20 text-center">
      <h2 class="text-4xl font-bold">Meet the Team</h2>
      <p class="mt-4">Luke Anderson-Trocm√©, Brian (cat), and maybe you next!</p>
      <a href="/people" class="mt-6 inline-block bg-primary text-white px-6 py-3 rounded hover:bg-primary/80">
        See all members
      </a>
    </section>
  </Reveal>

  <Reveal>
    <section class="py-20 bg-[#F7F9FC] text-center">
      <h2 class="text-4xl font-bold">News & Updates</h2>
      <p class="mt-4">Stay tuned for the latest on our projects, publications, and events.</p>
      <a href="/news" class="mt-6 inline-block bg-primary text-white px-6 py-3 rounded hover:bg-primary/80">
        Read news
      </a>
    </section>
  </Reveal>
</Page>
