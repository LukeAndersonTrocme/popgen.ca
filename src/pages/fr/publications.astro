---
import Navbar from '../../components/Navbar.jsx';
import publications from '../../data/publications.json';
---
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>Publications â€“ Laboratoire PopGen</title>
  </head>
  <body class="font-sans text-slate-900 dark:text-slate-50 prose mx-auto my-12">
    <Navbar locale="fr" />
    <h1>Publications</h1>
    <ul>
      {publications.map((pub) => (
        <li>
          <a
            href={pub.doi ? `https://doi.org/${pub.doi}` : '#'}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline"
          >
            {pub.title} (<em>{pub.journal}, {pub.year}</em>)
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
