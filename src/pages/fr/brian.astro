---
import Page from '../../layouts/Page.astro';
import Reveal from '../../components/Reveal.jsx';
import Gallery from '../../components/Gallery.jsx';
import { readdirSync } from 'fs';
import { resolve, dirname } from 'path';

// â”€â”€â”€ CORRECTED: same twoâ€level up from src/pages/fr â”€â”€â”€
const folderOnDisk = resolve(
  dirname(import.meta.url.replace('file://', '')),
  '../../public/assets/team/brian'
);

const files = readdirSync(folderOnDisk).filter((f) =>
  /\.(heic|HEIC|jpe?g|png)$/i.test(f)
);

const photos = files.map((f) => ({
  src: `/assets/team/brian/${f}`,
  alt: `Brian le chat : ${f}`,
}));

const locale = 'fr';
const title = 'Brian';
const description = 'Notre mascotte officielle et responsable du bien-Ãªtre ğŸ±. Profitez de ces photos !';
---
<Page title={title} lang="fr" locale={locale}>
  <Reveal client:load>
    <section class="py-20 text-center">
      <h1 class="text-5xl font-bold">{title}</h1>
      <p class="mt-4 mx-auto max-w-2xl">{description}</p>

      {/* Galerie lÃ©gÃ¨re React */}
      <Gallery slides={photos} client:load />
    </section>
  </Reveal>
</Page>
