---
import Page from '../../layouts/Page.astro';
import { Card, CardContent } from '../../components/ui/card.jsx';
---
<Page title="Équipe – Laboratoire PopGen" lang="fr" locale="fr">
  <section class="py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Luke -->
      <Card class="transform hover:scale-105 transition">
        <CardContent>
          <div class="w-32 h-32 mx-auto -mt-16 overflow-hidden rounded-full shadow-lg">
            <img
              src="/assets/team/luke.jpg"
              alt="Luke Anderson-Trocmé"
              class="object-cover w-full h-full"
            />
          </div>
          <h3 class="mt-6 text-xl font-semibold text-center">
            Luke Anderson-Trocmé
          </h3>
          <p class="text-center text-sm text-slate-600 dark:text-slate-400">
            Investigateur principal
          </p>
          <p class="mt-2 text-center text-slate-700 dark:text-slate-300">
          </p>
        </CardContent>
      </Card>

      <!-- Brian -->
      <Card class="transform hover:scale-105 transition">
        <CardContent>
          <div class="w-32 h-32 mx-auto -mt-16 overflow-hidden rounded-full shadow-lg">
            <img
              src="/assets/team/brian.jpg"
              alt="Brian le chat"
              class="object-cover w-full h-full"
            />
          </div>
          <h3 class="mt-6 text-xl font-semibold text-center">Brian</h3>
          <p class="text-center text-sm text-slate-600 dark:text-slate-400">
            Mascotte du laboratoire / Responsable du bien-être
          </p>
        </CardContent>
      </Card>

      <!-- You -->
      <Card class="transform hover:scale-105 transition">
        <CardContent>
          <div class="w-32 h-32 mx-auto -mt-16 overflow-hidden rounded-full shadow-lg">
            <img
              src="/assets/team/you.jpg"
              alt="Ce pourrait être vous !"
              class="object-cover w-full h-full"
            />
          </div>
          <h3 class="mt-6 text-xl font-semibold text-center">
            Ce pourrait être vous !
          </h3>
          <p class="text-center text-sm text-slate-600 dark:text-slate-400">
            Postes ouverts bientôt
          </p>
        </CardContent>
      </Card>
    </div>
  </section>
</Page>
